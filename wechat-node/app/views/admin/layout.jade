extends ../layout

append css
  link(rel='stylesheet', href='/css/admin.css')
  link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')

block main
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Wechat Management Dashboard
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href="/admin/users/logout")
                i.fa.fa-unlock-alt
                | &nbsp;Logout
            li
              a(href="/admin/help")
                i.fa.fa-question
                | &nbsp;Help
          form.navbar-form.navbar-right
            input.form-control(type="text", placeholder="Search...")
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
            if pagePath == "/admin/usermapping"
              li.active
                a(href="/admin/usermapping")
                  i.fa.fa-address-book-o
                  | &nbsp;User Mapping List                
            else
              li
                a(href="/admin/usermapping")
                  i.fa.fa-address-book-o
                  | &nbsp;User Mapping List
            if pagePath == "/admin/user"
              li.active
                a(href="/admin/user")
                  i.fa.fa-address-card-o                
                  | &nbsp;User List
            else            
              li
                a(href="/admin/user")
                  i.fa.fa-address-card-o                
                  | &nbsp;User List

            if pagePath == "/admin/wechatmessage"
              li.active
                a(href="/admin/wechatmessage")
                  i.fa.fa-commenting                
                  | &nbsp;Wechat Message List
            else            
              li
                a(href="/admin/wechatmessage")
                  i.fa.fa-commenting
                  | &nbsp;Wechat Message List


            if pagePath == "/admin/wechatevent"
              li.active
                a(href="/admin/wechatevent")
                  i.fa.fa-flash                
                  | &nbsp;Wechat Event List
            else            
              li
                a(href="/admin/wechatevent")
                  i.fa.fa-flash
                  | &nbsp;Wechat Event List

          ul.nav.nav-sidebar
            li
              a(href="/admin/users/password")
                i.fa.fa-lock
                | &nbsp;Change Passworkd
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          block content
